[user]
	name = Alon Gat
	email = along@torq.io
[github]
	user = alongat
[alias]
	compare = log --oneline master..
	author = shortlog -s -e
	ci = commit
	co = checkout
	br = branch
	st = status -s
	edit = !nvim $(git ls-files -m) -p
	flux = log --author="flux" --oneline
	pr = !pull-request
	co = checkout
	s = status
	l = log
	cob = checkout -b
	wip = commit -am 'wip'
	web = !gh pr view -w
[push]
	default = simple
[color]
	ui = true
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
; [merge]
	; tool = vimdiff
; [diff]
	; tool = vimdiff
; [difftool]
	; prompt = false
[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true    # use n and N to move between diff sections
    side-by-side = true
    # delta detects terminal colors automatically; set one of these to disable auto-detection
    # dark = true
    # light = true

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default

[mergetool]
	path = nvim
	keepBackup = false
[mergetool "vimdiff"]
	path = nvim
[credential]
	helper = 
	helper = /usr/local/share/gcm-core/git-credential-manager
[credential "https://dev.azure.com"]
	useHttpPath = true
